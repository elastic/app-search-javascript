  "version": "0.2.0",
  "configurations": [
    {
      "name": "Jest tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "stopOnEntry": false,
      "args": ["--runInBand", "--forceExit", "--watch", "--verbose"],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "env": {
        "NODE_ENV": "test"
      },
      "console": "integratedTerminal",
      "sourceMaps": true
    }
  ]
}
